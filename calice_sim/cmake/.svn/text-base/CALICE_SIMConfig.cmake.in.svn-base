# CALICE_SIMConfig.cmake.in
#
# cmake config file for CALICE_SIM
#  CALICE_SIM_INCLUDE_DIRS  - the CALICE_SIM include directory
#  CALICE_SIM_LIBRARIES     - The libraries needed to use CALICE_SIM
#  CALICE_SIM_DEFINITIONS   - the compile time definitions


#fixme: not true if INCLUDE_INSTALL_DIR is absolute path
SET( CALICE_SIM_INCLUDE_DIRS "@FULL_INCLUDE_INSTALL_DIR@/" )
SET( CALICE_SIM_LIBRARIES    "@FULL_LIB_INSTALL_DIR@/@FULL_LIBRARY_NAME@" )

SET( CALICE_SIM_DEFINITIONS @CALICE_SIM_EXTERN_DEFINITIONS@ )

SET( CALICE_SIM_ROOT_DIR "@CMAKE_INSTALL_PREFIX@" )

SET( CALICE_SIM_MAJOR_VERSION "@CALICE_SIM_MAJOR_VERSION@" )
SET( CALICE_SIM_MINOR_VERSION "@CALICE_SIM_MINOR_VERSION@" )
SET( CALICE_SIM_PATH_LEVEL    "@CALICE_SIM_PATCH_LEVEL@"    )


SET( CALICE_SIM_FOUND TRUE )

